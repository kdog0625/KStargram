.wrapper
  = render "header"
  .gbl_main
    .gbl_main_title
      .gbl_main_title_container
        .gbl_main_title_container_titles
          %h1.tit.icon_font
            %span.ico
            %i.fab.fa-instagram
            %i.stst コーディネート投稿
  .gbl  
    .gbl_body
      .gbl_body_contena 
        %h3.btnaa
          ファッション画像
        = form_for @tweet do |form| 
          .newfasfield
            .newfasfield_sub
              %h2 タイトル
            .newfasfield_main
              = form.text_field :title, placeholder: "タイトル"
          .sectionimages
            .sectionimages-sub
              .sectionimages-sub-box
                %span.icoico
                %span.icoimage
                  %i.fas.fa-images
            .sectionimages-main
              .sectionimages-main-top
              %p.sectionimages-main-photo
                = form.file_field :image, class: "image_form"
                %span.textextx 写真アップロード
          .newtempfield
            .newtempfield_sub
              %h2 気温
