.wrapper
  =render "header"
  .log  
    .log_in
      .log_in_main
        %h2 Sign in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .log_str_items 
            .log_str_items_mail
              %br/
              = f.text_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス"
              .sssssss
                ※「@」「.」などの記入漏れにご注意ください
            .log_str_items_password
              %br/
              = f.password_field :password, autocomplete: "current-password",placeholder: "6文字以上の半角英数字"
              .sssssss
                ※英字と数字の両方を含めて設定してください
            - if devise_mapping.rememberable?
              .log_str_items_check
                = f.check_box :remember_me
                = f.label :ログイン状態を保持する  
            .log_str_items_button
              = f.submit "Sign in"
  =render "footer"
