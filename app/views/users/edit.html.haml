                  .edituserform_sex_sub 
                    %h2 性別
                  .edituserform_sex_main
                    = f.select :sex, ['MEN', 'WOMEN']
                .edituserform_age
                  .edituserform_age_sub
                    %h2 年齢
                  .edituserform_age_main
                    = f.text_field :age, placeholder: "年齢(歳)"
                .edituserform_profile
                  .edituserform_profile_main
                    = f.text_area :profile, autofocus: true,placeholder: "自己紹介"
