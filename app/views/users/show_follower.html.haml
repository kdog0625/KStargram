.wrapper 
  =render "header"
  .followmain
    %aside.followmain-side
      .followmain-side-user
        .followmain-side-user-image
          =link_to image_tag(@user.image_url)
        .followmain-side-user-users
          %h3.followmain-side-user-users-content
            =@user.name
          %h3.followmain-side-user-users-id
            =@user.usernoid
    %main.followmain-main 
      .followmain-main-content
        .followmain-main-content-header
          %h1 フォロワー
        - @user.followers.each do |user|
          %ul.followmain-main-content-list
            %li.followmain-main-content-list-item
              .followmain-main-content-list-item-user-list
                .followmain-main-content-list-item-user-list-img
                  =link_to image_tag(user.image_url),user_path(user)
                .followmain-main-content-list-item-user-list-name
                  .followmain-main-content-list-item-user-list-name-prof
                    .followmain-main-content-list-item-user-list-name-prof-user
                      =link_to user.name, user_path(user)
                    .followmain-main-content-list-item-user-list-name-prof-id
                      =link_to user.usernoid, user_path(user)
  =render "footer" 
